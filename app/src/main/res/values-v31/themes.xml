<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_talkie</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.Talkey_android</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/logo_talkie_text</item>
    </style>

    <style name="Theme.App.Starting_night" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_talkie</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.Talkey_android</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/logo_talkie_text_dark</item>
    </style>
</resources>